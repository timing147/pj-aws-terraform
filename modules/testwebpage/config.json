{
    "agent":{
       "metrics_collection_interval":60,
       "region":"ap-southeast-1",
       "run_as_user":"root"
    },
    "logs":{
       "logs_collected":{
          "files":{
             "collect_list":[
                {
                   "file_path":"/var/log/apache2/error.log",
                   "log_group_name":"/aws/ec2/kms",
                   "log_stream_name":"error_{instance_id}"
                }
             ]
          }
       }
    },
    "metrics": {
        "metrics_collected": {
        "mem": {
            "measurement": [
            "mem_used_percent",
            "mem_available_percent",
            "mem_total",
            "mem_free",
            "mem_used",
            "mem_available"
            ],
            "metrics_collection_interval": 60
            }
        }
    },
    "disk": {
        "measurement": [
          "disk_free",
          "disk_used",
          "disk_used_percent"
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "/"
        ]
    }
}


 